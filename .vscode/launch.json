    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch test",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "test"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}",
            "port": 9230,
            "env": {
                "DEBUG_PORT": "9230"
            },
            "outputCapture": "std",
            "type": "node"
        },
    ]
}